datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      Int     @id @default(autoincrement())
  email   String  @unique
  name    String
  profile Profile?
}

model Profile {
  id       Int    @id @default(autoincrement())
  userId   Int    @unique
  imageUrl String? // Optional field for the profile image URL
  user     User   @relation(fields: [userId], references: [id])
}

